@page
@model MedicoModel;
@{
    ViewData["Title"] = "Médico";
}

<main class="contenedor sombra">
    <section>
        <h2>Datos de Médico</h2>

        
        <form class="formulario" method="post">

            <fieldset>

                <div class="contenedor-campos">

                    <div class="campo">
                        <label>Nombre</label>
                        <input class="input-text" type="text" placeholder="Nombre" asp-for="NuevoMedico.Nombre" required>
                    </div>

                    <div class="campo">
                        <label>Apellidos</label>
                        <input class="input-text" type="text" placeholder="Apellidos" asp-for="NuevoMedico.Apellidos" required>
                    </div>

                    <div class="campo">
                        <label>N° Documento</label>
                        <input class="input-text" type="text" placeholder="Documento de identidad" asp-for="NuevoMedico.Documento" required>
                    </div>

                    <div class="campo">
                        <label>Teléfono</label>
                        <input class="input-text" type="number" placeholder="N° Telefónico" asp-for="NuevoMedico.Telefono" required>
                    </div>

                    <div class="campo">
                        <label>Género</label>
                        <select class="input-text" asp-for="NuevoMedico.Genero">
                            <option value="masculino">-- Seleccione --</option>
                            <option value="masculino">Masculino</option>
                            <option value="femenino">Femenino</option>
                        </select>
                    </div>

                    <div class="campo">
                        <label>Especialidad</label>
                        <input class="input-text" type="text" placeholder="Especialidad" asp-for="NuevoMedico.Especialidad" required>
                    </div>

                    <div class="campo">
                        <label>Registro</label>
                        <input class="input-text" type="text" placeholder="N° Registro" asp-for="NuevoMedico.RegistroRethus" required>
                    </div>

                     <div class="campo">
                        <label>Codigo</label>
                        <input class="input-text" type="text" placeholder="N° Codigo" asp-for="NuevoMedico.Codigo" required>
                    </div>
                    

                </div>  <!-- .contenedor-campos   -->

                <div class="alinear-derecha flex color-enviar">
                    <input class="boton" type="submit" value="Registrar">
                </div>

            </fieldset>

        </form>

    @{
        if(Model.Post){
            if(Model.isAdded){
                <script>
                    alert("El Medico ha sido agregado correctamente")
                </script>
            }else{
                <script>
                    alert("Ha ocurrido un error al agregar el medico")
                </script>
            }
        }
    }
    </section>

</main>

</html>