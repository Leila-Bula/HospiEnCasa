@page
@model FamiliarDesignadoModel
@{
    ViewData["Title"] = "Familiar Designado";
}

<main class="contenedor sombra">
    <section>
        <h2>Datos de Familiar Designado</h2>

        
        <form class="formulario" method="post">

            <fieldset>

                <div class="contenedor-campos">

                    <div class="campo">
                        <label>Nombre</label>
                        <input class="input-text" type="text" placeholder="Nombre" required asp-for="NuevoFamiliar.Nombre">
                    </div>

                    <div class="campo">
                        <label>Apellidos</label>
                        <input class="input-text" type="text" placeholder="Apellidos" required  asp-for="NuevoFamiliar.Apellidos">
                    </div>

                    <div class="campo">
                        <label>N° Documento</label>
                        <input class="input-text" type="text" placeholder="Documento de identidad" required  asp-for="NuevoFamiliar.Documento">
                    </div>

                    <div class="campo">
                        <label>Teléfono</label>
                        <input class="input-text" type="number" placeholder="N° Telefónico" required  asp-for="NuevoFamiliar.Telefono">
                    </div>

                    <div class="campo">
                        <label>Género</label>
                        <select class="input-text"  asp-for="NuevoFamiliar.Genero">
                            <option value="masculino">-- Seleccione --</option>
                            <option value="masculino">Masculino</option>
                            <option value="femenino">Femenino</option>
                        </select>
                    </div>

                    <div class="campo">
                        <label>Documento del Paciente</label>
                        <input class="input-text" type="text" placeholder="Documento Paciente" asp-for="idPaciente" required >
                    </div>

                    <div class="campo">
                        <label>Parentesco</label>
                        <input class="input-text" type="text" placeholder="Parentesco con paciente" required  asp-for="NuevoFamiliar.Parentesco">
                    </div>

                    <div class="campo">
                        <label>Correo Eletrónico</label>
                        <input class="input-text" type="email" placeholder="E-mail" required  asp-for="NuevoFamiliar.Correo">
                    </div>
                    

                </div>  <!-- .contenedor-campos   -->

                <div class="alinear-derecha flex color-enviar">
                    <input class="boton" type="submit" value="Registrar">
                </div>

            </fieldset>

        </form>

    </section>

</main>

</html>