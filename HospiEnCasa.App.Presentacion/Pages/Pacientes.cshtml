@page
@model PacientesModel;
@using HospiEnCasa.App.Dominio;
@{
  ViewData["Title"] = "Pacientes";
}

<h2>PACIENTES REGISTRADOS</h2>

<main class="contenedor sombra">
  
  <table class="tablaPacientes">
    <thead>
      <tr>
        <th>Doc. Id.</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Ciudad</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @{
        foreach (var paciente in Model.Pacientes)
        {
            <tr>
              <td>@paciente.Documento</td>
              <td>@paciente.Nombre</td>
              <td>@paciente.Apellidos</td>
              <td>@paciente.Ciudad</td>
              <td><a class="boton-detalles" asp-page="/Paciente" asp-route-idPaciente="@paciente.Id"><bold>Detalles</bold></a>
              <a class="boton-detalles color-actualizar" asp-page="/ActualizarPaciente" asp-route-idPaciente="@paciente.Id"><bold>Actualizar</bold></a></td>
            </tr>
        }
      }
    </tbody>
  </table>

  <div class="alinear-derecha flex">
      <a class="boton" asp-page="/Index">Regresar</a>
  </div>

</main>

</html>